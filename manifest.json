{
  "manifest_version": 3,
  "name": "Domain Request Viewer",
  "version": "1.1",
  "description": "Shows unique domains accessed by the current tab, grouped by suffix.",
  "permissions": ["tabs", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Domains"
  }
}
